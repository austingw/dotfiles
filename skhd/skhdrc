# focus window
shift + cmd - h : yabai -m window --focus west
shift + cmd - l : yabai -m window --focus east
shift + cmd - k : yabai -m window --focus north
shift + cmd - j : yabai -m window --focus south

# balance size of windows
 shift + cmd - b : yabai -m space --balance

# fast focus desktop
 shift + cmd - r : yabai -m space --focus recent

# swap managed window
ctrl + alt + cmd - h : yabai -m window --swap west
ctrl + alt + cmd - l : yabai -m window --swap east
ctrl + alt + cmd - k : yabai -m window --swap north
ctrl + alt + cmd - j : yabai -m window --swap south

# send window to desktop and follow focus
 ctrl + alt + cmd - n : yabai -m window --space next; yabai -m space --focus next
 ctrl + alt + cmd - p : yabai -m window --space prev; yabai -m space --focus prev
 ctrl + alt + cmd - 1 : yabai -m window --space  1; yabai -m space --focus 1
 ctrl + alt + cmd - 2 : yabai -m window --space  2; yabai -m space --focus 2
 ctrl + alt + cmd - 3 : yabai -m window --space  3; yabai -m space --focus 3
 ctrl + alt + cmd - 4 : yabai -m window --space  4; yabai -m space --focus 4
 ctrl + alt + cmd - 5 : yabai -m window --space  5; yabai -m space --focus 5
 ctrl + alt + cmd - 6 : yabai -m window --space  6; yabai -m space --focus 6
 ctrl + alt + cmd - 7 : yabai -m window --space  7; yabai -m space --focus 7
 ctrl + alt + cmd - 8 : yabai -m window --space  8; yabai -m space --focus 8
 ctrl + alt + cmd - 9 : yabai -m window --space  9; yabai -m space --focus 9

# increase window size
cmd + ctrl - h : yabai -m window --resize left:-20:0
cmd + ctrl - l : yabai -m window --resize right:20:0
cmd + ctrl - k : yabai -m window --resize top:0:-20
cmd + ctrl - j : yabai -m window --resize bottom:0:20

# decrease window size
cmd + alt - h : yabai -m window --resize left:20:0
cmd + alt - l : yabai -m window --resize right:-20:0
cmd + alt - k : yabai -m window --resize top:0:20
cmd + alt - j : yabai -m window --resize bottom:0:-20

# toggle window zoom (fullscreen)
shift + cmd - f : yabai -m window --toggle zoom-fullscreen

# toggle window split types
shift + cmd - t : yabai -m window --toggle split
